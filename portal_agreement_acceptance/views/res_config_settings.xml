<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='portal_setting']" position="inside">
                <div class="row mt8">
                    <div class="col-12">
                        <label class="o_light_label" string="Maximum number of agreements" for="limit_agreements" />
                        <field name="limit_agreements" class="col-2"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
