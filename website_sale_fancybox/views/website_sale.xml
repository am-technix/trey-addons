<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_fancybox_zoom" inherit_id="website_sale.product" customize_show="True" name="Fancybox Zoom">
        <xpath expr="//section[@id='product_detail']" position="attributes">
            <attribute name="data-zoom">fancybox</attribute>
        </xpath>
        <xpath expr="//div[@id='o-carousel-product']" position="attributes">
            <attribute name="data-zoom">fancybox</attribute>
        </xpath>
    </template>
</odoo>
