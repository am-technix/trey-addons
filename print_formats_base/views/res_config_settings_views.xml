<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='business_documents']/div[hasclass('o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="print_formats_settings">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Print Formats Settings</span>
                        <div class="text-muted">
                            Additional settings for reports
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="show_qty_total" string="Reports Quantity Total" class="col-6 col-lg-6 o_light_label"/>
                                <field name="show_qty_total" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
