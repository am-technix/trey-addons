<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='utm_tracker_settings']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="nexmart_setting">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Nexmart</span>
                        <div class="text-muted">
                            Data view integration
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="nexmart_apikey" class="col-lg-3 o_light_label" string="API Key"/>
                                <field name="nexmart_apikey" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
