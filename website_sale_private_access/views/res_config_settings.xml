<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="inside">
                <div id="private_shop" class="col-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_private_shop"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Private shop" for="is_private_shop"/>
                        <div class="text-muted">
                            Configure access to store routes to public or identified users
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
