<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="notifications_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='notifications_block']" position="inside">
                <h5>Sale notifications</h5>
                <div class="row col-12 mt-8">
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_quotation"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Notify quotation" for="notify_quotation"/>
                            <div class="text-muted">
                                Notify quotation
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_sale"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Notify sale order" for="notify_sale"/>
                            <div class="text-muted">
                                Notify sale order
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_done"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Notify blocked order" for="notify_done"/>
                            <div class="text-muted">
                                Notify blocked order
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_cancel"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Notify canceled order" for="notify_cancel"/>
                            <div class="text-muted">
                                Notify canceled order
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
