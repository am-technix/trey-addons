<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="products" inherit_id="website_sale.products">
        <xpath expr="//div[hasclass('products_pager')][1]" position="after">
            <div id="o_wscf_filters" class="panel-group hidden-lg hidden-md" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div id="o_wscf_filters_heading" class="panel-heading" role="tab">
                        <h4 class="panel-title">
                            <a class="btn btn-block btn-link collapsed" role="button" data-toggle="collapse" data-parent="#o_wscf_filters" href="#o_wscf_filters_panel" aria-expanded="true" aria-controls="o_wscf_filters_panel">Filters</a>
                        </h4>
                    </div>
                    <div id="o_wscf_filters_panel" class="panel-collapse collapse" role="tabpanel" aria-labelledby="o_wscf_filters_heading">
                        <div class="panel-body js_wscf_filters_panel_body"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
