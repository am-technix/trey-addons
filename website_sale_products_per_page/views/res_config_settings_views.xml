<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="after">
                <h2>Products per page</h2>
                <div class="row mt16 o_settings_container" id="products_limit">
                    <div class="col-16 col-lg-8 o_setting_box" id="domains_setting">
                        <div class="o_setting_right_pane">
                            <h6>Products per page</h6>
                            <div class="text-muted">
                                Number of products to show
                            </div>
                            <div class="content-group mt8" id="products_per_page">
                                <label class="o_light_label" string="Number of products per page" for="products_per_page" />
                                <field name="ppg_values"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
