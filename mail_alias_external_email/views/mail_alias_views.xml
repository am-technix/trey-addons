<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mail_alias_tree" model="ir.ui.view">
        <field name="model">mail.alias</field>
        <field name="inherit_id" ref="mail.view_mail_alias_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alias_model_id']" position="after">
                <field name="external_email"/>
            </xpath>
        </field>
    </record>
    <record id="view_mail_alias_form" model="ir.ui.view">
        <field name="model">mail.alias</field>
        <field name="inherit_id" ref="mail.view_mail_alias_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alias_model_id']" position="after">
                <field name="external_email"/>
            </xpath>
        </field>
    </record>
    <record id="view_mail_alias_search" model="ir.ui.view">
        <field name="model">mail.alias</field>
        <field name="inherit_id" ref="mail.view_mail_alias_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alias_model_id']" position="after">
                <field name="external_email"/>
            </xpath>
        </field>
    </record>
</odoo>
