<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <t t-if="page_name == 'new_rma'">
                <li class="breadcrumb-item"><a t-attf-href="/my/orders?{{ keep_query() }}">Sale Orders</a></li>
                <li class="breadcrumb-item">
                    <a t-attf-href="/my/orders/{{ order.id }}?{{ keep_query() }}">
                        <span t-field="order.name"/>
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    Order return
                </li>
            </t>
            <t t-if="page_name == 'rma'">
                <li class="breadcrumb-item"><a t-attf-href="/my/orders?{{ keep_query() }}">Sale Orders</a></li>
                <li class="breadcrumb-item">
                    <a t-attf-href="/my/orders/{{ order.id }}?{{ keep_query() }}">
                        <span t-field="order.name"/>
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    <span t-field="return_order.name"/>
                </li>
            </t>
        </xpath>
        <xpath expr="//a[contains(@t-attf-href, '/my/orders')]/parent::li" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//a[contains(@t-attf-href, '/my/orders')]/parent::li" position="after">
            <li t-if="page_name == 'order' or sale_order and sale_order.state not in ('sent', 'cancel')" t-attf-class="breadcrumb-item #{'active ' if not sale_order else ''}">
                <a t-if="sale_order" t-attf-href="/my/orders?{{ keep_query() }}">Sales and returns</a>
                <t t-else="">Sales and returns</t>
            </li>
        </xpath>
    </template>
    <template id="portal_my_home_sale" inherit_id="sale.portal_my_home_sale">
        <xpath expr="//t[@t-if='order_count']/t[@t-set='title']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//t[@t-if='order_count']/t[@t-set='title']" position="after">
            <t t-set="title">Sales and returns</t>
        </xpath>
    </template>
    <template id="portal_my_orders" inherit_id="sale.portal_my_orders">
        <xpath expr="//t[@t-call='portal.portal_searchbar']" position="inside">
            <form class="pull-right form-inline ml-2 mt-2 mb-2" role="search" t-attf-action="/my/orders/" method="get">
                <t t-call="website.website_search_box"/>
            </form>
        </xpath>
        <xpath expr="//span[hasclass('d-none', 'd-md-inline')]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//span[hasclass('d-none', 'd-md-inline')]" position="after">
            <span class='d-none d-md-inline'>Order #</span>
        </xpath>
        <xpath expr="//t[@t-foreach='orders']/tr/td" position="inside">
            <t t-if="order.order_line">
                <a role="button" data-toggle="collapse" t-attf-href="#collapseLine#{order.id}" aria-expanded="false" t-attf-aria-controls="collapseLine#{order.id}">
                    <small>(<span t-esc="len([l for l in order.order_line if l.is_returnable])"/> items)</small>
                </a>
            </t>
            <t t-if="order.order_line">
                <div class="collapse" t-attf-id="collapseLine#{order.id}">
                    <ul class="list-unstyled mb0">
                        <t t-foreach="order.order_line" t-as="line">
                            <t t-if="line.is_returnable and line.product_id.product_tmpl_id">
                                <li>
                                    <small class="text-muted">
                                        <span t-esc="int(line.product_uom_qty)"/> x
                                        <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                            <span t-field="line.name"/>
                                        </a>
                                    </small>
                                </li>
                            </t>
                        </t>
                    </ul>
                </div>
            </t>
        </xpath>
        <xpath expr="//th[contains(text(),'Total')]" position="after">
            <th></th>
        </xpath>
        <xpath expr="//span[@t-field='order.amount_total']/.." position="after">
            <td class="text-center">
                <t t-if="not order.is_return and order.is_returnable">
                    <a t-attf-href="/my/order/rma/#{ order.id }">Return products</a>
                </t>
            </td>
        </xpath>
    </template>
    <template id="sale_order_portal_template" inherit_id="sale.sale_order_portal_template">
        <xpath expr="//div[@t-call='sale.sale_order_portal_content']" position="after">
            <div id="returns" class="card-body">
                <t t-if="sale_order.is_returnable">
                    <h3>Returns</h3>
                    <p>Returns available until <span t-field="sale_order.returnable_date_to" t-options='{"widget": "date"}'/>.</p>
                    <t t-if="sale_order.state in ('sale', 'done') and not sale_order.is_return">
                        <p>
                            <a id="request_rma" class="btn btn-secondary o_wrma_return_btn" t-attf-href="/my/order/rma/#{ sale_order.id }" title="Request return"><i class="fa fa-undo"/> Request return</a>
                        </p>
                    </t>
                    <t t-if="return_orders">
                        <table id="sale_returns_table" class="table table-sm">
                            <thead class="bg-100">
                                <tr>
                                    <th>Return #</th>
                                    <th class="text-center">Request date</th>
                                    <th class="text-center">State</th>
                                    <th class="text-center">Shipping label</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="return_orders" t-as="return_order">
                                    <tr>
                                        <td>
                                            <t t-if="return_order.state not in ['draft', 'cancel']">
                                                <t t-if="return_order.order_line">
                                                    <a role="button" data-toggle="collapse" t-attf-href="#collapseLine#{ return_order.id }" aria-expanded="false" t-attf-aria-controls="collapseLine#{ return_order.id }">
                                                        <t t-esc="return_order.name"/>
                                                        <small>(<span t-esc="len(return_order.order_line)"/> items)</small>
                                                    </a>
                                                </t>
                                                <t t-if="return_order.order_line">
                                                    <div class="collapse" t-attf-id="collapseLine#{ return_order.id }">
                                                        <ul class="list-unstyled mb0">
                                                            <t t-foreach="return_order.order_line" t-as="line">
                                                                <li>
                                                                    <small class="text-muted">
                                                                        <span t-esc="int(line.product_uom_qty)"/> x
                                                                        <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                                                            <span t-esc="line.name"/>
                                                                        </a>
                                                                    </small>
                                                                </li>
                                                            </t>
                                                        </ul>
                                                    </div>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="return_order.name"/>
                                            </t>
                                        </td>
                                        <td class="text-center"><span t-field="return_order.date_order" t-options='{"widget": "date"}'/></td>
                                        <td class="text-center">
                                            <t t-set="state_return_classes" t-value="{'draft': 'info', 'sent': 'warning', 'sale': 'success', 'done': 'success', 'cancel': 'danger'}"/>
                                            <t t-set="state_return_icons" t-value="{'draft': 'fa-clock-o', 'sent': 'fa-envelope-o', 'sale': 'fa-check', 'done': 'fa-check', 'cancel': 'fa-times'}"/>
                                            <span t-attf-class="badge badge-#{ state_return_classes[return_order.state_return] } label-text-align"><i t-attf-class="fa #{ state_return_icons[return_order.state_return] }"></i> <span t-field="return_order.state_return"/></span>
                                        </td>
                                        <td class="text-center">
                                            <t t-if="return_order.state in ['draft', 'cancel']">
                                                Not available yet
                                            </t>
                                            <t t-if="return_order.state not in ['draft', 'cancel']">
                                                <a t-att-href="'/my/orders/pdf/print-label/%s?%s' % (return_order.id, keep_query())" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
    <template id="return_order_lines" name="Return Order Lines">
        <div class="table-responsive mb24">
            <table class="table table-striped table-condensed">
                <thead class="bg-100">
                    <tr class="text-center">
                        <th colspan="2">Product</th>
                        <th>Price/unit</th>
                        <th>Purchased quantity</th>
                        <th>Quantity to return</th>
                        <th>Reason for return</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="order_lines" t-as="line">
                        <t t-if="line.is_returnable and line.product_id.is_returnable">
                            <tr>
                                <td t-if="not line.product_id.product_tmpl_id" class='td-img'></td>
                                <td align="center" t-if="line.product_id.product_tmpl_id" class='td-img'>
                                    <span t-field="line.product_id.image_small" t-options="{'widget': 'image', 'class': 'img-rounded'}" />
                                </td>
                                <td>
                                    <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                        <strong t-esc="line.product_id.with_context(display_default_code=False).display_name" />
                                    </a>
                                    <div class="o_wrma_return_period small">Returns available until: <span t-esc="line.returnable_date" t-options='{"widget": "date"}'/></div>
                                </td>
                                <td class="text-center"><t t-esc="line.price_unit" t-options="{'widget': 'monetary','display_currency': website.currency_id}"/></td>
                                <td class="js_max_value text-center"><t t-esc="int(line.product_uom_qty)"/></td>
                                <td class="text-center" t-attf-class="#{error_msg and 'has-error' or ''}">
                                    <div class="css_quantity input-group oe_website_spinner">
                                        <a t-attf-href="#" class="btn btn-secondary input-group-addon float_right js_add_cart_json hidden-xs">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <input type="text" class="js_wrma_variant_qty form-control text-center quantity" t-att-name="line.id" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-data-max="int(line.product_uom_qty)-int(line.qty_return)" value="0"/>
                                        <a t-attf-href="#" class="btn btn-secondary input-group-addon float_left js_add_cart_json hidden-xs">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <textarea type="text" t-attf-name="notes-#{ line.id }"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </div>
    </template>
    <template id="sale_order_return_portal_content">
        <div id="sale_return" class="pb-2 pt-3 card-header bg-white">
            <h2 class="my-0">Order return</h2>
        </div>
        <div class="card-body">
            <t t-if="order">
                <form t-attf-action="/my/order/rma/#{order.id}" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-if="errors">
                        <div class="alert alert-danger has-error">
                            <ul class="list-unstyled mb0">
                                <t t-foreach="errors" t-as="error">
                                    <li class="list-unstyled-item">
                                        <t t-if="errors[error]['product']">
                                            <strong t-esc="errors[error]['product'].product_id.with_context(display_default_code=False).display_name"/>:
                                        </t>
                                        <span t-esc="errors[error]['msg']"/>
                                    </li>
                                </t>
                            </ul>
                        </div>
                        <p class="text-muted">Need help? Write us from our <a href="/contactus">contact page</a>.</p>
                    </t>
                    <h3 id="sale_return_3">Available products for return</h3>
                    <t t-call="website_rma.return_order_lines"/>
                    <p class="text-right">
                        <button class="js_all_line_button btn btn-default">Select All</button>
                        <button type="submit" class="btn btn-primary">Request return</button>
                    </p>
                </form>
            </t>
            <t t-else="">
                <p class="alert-warning">No order found.</p>
            </t>
        </div>
    </template>
    <template id="portal_order_rma" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <div id="sale_order_return_content" class="col-12 col-lg justify-content-end">
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="website_rma.sale_order_return_portal_content"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="portal_return_order_page" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <div id="sale_order_return_content" class="col-12 col-lg justify-content-end">
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="website_rma.sale_order_return_order_page_portal_content"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="sale_order_return_order_page_portal_content">
        <div id="sale_return" class="pb-2 pt-3 card-header bg-white">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="my-0">
                        <t t-if="return_order.state in ('sent', 'cancel')">Request</t>
                        <t t-else="">Return</t>
                        <span t-esc="return_order.name"/>
                    </h2>
                </div>
                <div class="col-md-6">
                    <t t-if="return_order.state not in ['draft', 'cancel']">
                        <a target="_blank" t-att-href="'/my/orders/pdf/print-label/%s?%s' % (return_order.id, keep_query())" class="ml8 pull-right mt4 mr8" title="Print label">
                            <i class="fa fa-print"/> Print label
                        </a>
                    </t>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Origin order:</strong> <a t-attf-href="/my/orders/{{return_order.parent_sale_order.id}}?{{keep_query()}}"><t t-esc="return_order.parent_sale_order.name"/></a>
                </div>
                <div class="col-md-6 text-right">
                    <strong>Date:</strong> <span t-field="return_order.create_date" t-options='{"widget": "date"}'/><br/>
                </div>
            </div>
            <hr/>
            <div id="wrma_product_header" class="row">
                <div class="col-6">
                    <strong>Product</strong>
                </div>
                <div class="hidden-sm hidden-xs col-md-2 text-right">
                    <strong>Unit Price</strong>
                </div>
                <div class="hidden-sm hidden-xs col-md-2 text-right">
                    <strong>Quantity</strong>
                </div>
                <div class="hidden-sm hidden-xs col-md-2 text-right">
                    <strong>Subtotal</strong>
                </div>
            </div>
            <t t-foreach="return_order.order_line" t-as="ol">
                <div id="wrma_product_lines" class="row orders_vertical_align">
                    <div class="visible-lg col-lg-1 text-center">
                        <span t-field="ol.product_image" t-options="{'widget': 'image', 'class': 'img-rounded'}" />
                    </div>
                    <div id="wrma_product_name" class="col-5">
                        <a t-attf-href="/shop/product/#{ slug(ol.product_id.product_tmpl_id) }">
                            <strong t-esc="ol.name" />
                        </a>
                    </div>
                    <div class="col-2 text-right">
                        <span t-field="ol.price_unit" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/>
                    </div>
                    <div class="col-2 text-right">
                        <t t-if="ol.qty_return">
                            <span t-esc="ol.qty_return"/>
                        </t>
                    </div>
                    <div class="col-2 text-right">
                        <span t-field="ol.price_subtotal" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/>
                    </div>
                </div>
            </t>
            <hr/>
            <div class="row">
                <div class="col-md-4 offset-md-6 text-right">
                    <strong>Subtotal</strong>
                </div>
                <div class="col-md-2 text-right">
                    <strong>
                        <span t-field="return_order.amount_untaxed" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/>
                    </strong>
                </div>
                <t t-set="tax_groups" t-value="return_order._get_tax_amount_by_group()"/>
                <t t-foreach="tax_groups" t-as="amount_by_group">
                    <t t-if="len(tax_groups) == 1 and return_order.amount_untaxed == amount_by_group[2]">
                        <div class="col-md-10 text-right"><span t-esc="amount_by_group[0]"/></div>
                        <div class="col-md-2 text-right">
                            <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/>
                        </div>
                    </t>
                    <t t-else ="">
                        <div class="col-md-10 text-right">
                            <span t-esc="amount_by_group[0]"/>
                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/></span>
                        </div>
                        <div class="col-md-2 text-right">
                            <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/>
                        </div>
                    </t>
                </t>
                <div class="col-md-10 text-right">
                    <strong>Total</strong>
                </div>
                <div class="col-md-2 text-right">
                    <strong><span t-field="return_order.amount_total" t-options='{"widget": "monetary", "display_currency": return_order.pricelist_id.currency_id}'/></strong>
                </div>
            </div>
        </div>
    </template>
</odoo>
