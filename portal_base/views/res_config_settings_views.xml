<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="after">
                <h2>Portal</h2>
                <div class="row mt16 o_settings_container" id="portal_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="latest_documents">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <h5>Latest documents</h5>
                            <div class="text-muted">
                                Number of documents to show
                            </div>
                            <div class="content-group" id="portal_setting">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="portal_details">
                        <div class="o_setting_left_pane">
                            <field name="edit_portal_details"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="edit_portal_details"/>
                            <div class="text-muted">
                                Enables portal detail edition by customer
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
